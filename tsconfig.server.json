{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist/server",
    "lib": ["es7"]
  },
  "include": ["src/server"],
  "exclude": ["src/client", "node_modules"]
}
